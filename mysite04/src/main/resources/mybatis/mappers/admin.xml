<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
	<insert id="insert" parameterType="sitevo">
		
				<![CDATA[
			
				insert 
					into site 
				values	(null, 
							#{title }, 
							#{welcomeMessage },
							'/images/20202164154542.png',
							#{description})										
				]]>
	</insert>
	
	<select id="findAll" resultType="com.douzone.mysite.vo.SiteVo">
		
				<![CDATA[
				  select no, title, profile, welcome_message as welcomeMessage, description, profile from site							   				
				]]>
	</select> 
</mapper>